{
  "name": "ygoui-v2",
  "version": "2.1.0",
  "type": "module",
  "description": "Yu-Gi-Oh Card Price Checker & Pack Ripper - Cross-Platform PWA Edition",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8080 --directory .",
    "dev": "python3 -m http.server 5562 --directory . --bind 127.0.0.1",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:voice": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=voice",
    "test:session": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=session",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=integration",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "build": "npm run test && npm run lint",
    "build:production": "npm run test:coverage && npm run lint && npm run build:assets",
    "build:assets": "echo 'Building production assets...'",
    "validate": "npm run test:coverage && npm run lint",
    "install-electron": "npm install electron@32.3.3 --save-dev",
    "start-electron": "electron main.js",
    "package-electron": "electron-builder"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/js/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/src/js/tests/**/*.test.js",
      "<rootDir>/src/js/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/tests/**",
      "!src/js/**/*.test.js",
      "!src/js/**/*.spec.js",
      "!src/js/lib/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ],
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "forceCoverageMatch": [
      "**/src/js/**/*.js"
    ]
  },
  "keywords": [
    "yugioh",
    "cards",
    "price",
    "checker",
    "pack",
    "ripper",
    "voice",
    "recognition",
    "pwa"
  ],
  "author": "YGORipperUI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^25.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "pwa": {
    "short_name": "YGO Ripper",
    "name": "YGO Ripper UI v2",
    "description": "Cross-platform Yu-Gi-Oh card price checker and pack ripper with voice recognition",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#ffd700",
    "background_color": "#1a1a2e"
  }
}
