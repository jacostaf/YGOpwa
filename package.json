{
  "name": "ygoui-v2",
  "version": "2.1.0",
  "type": "module",
  "description": "Yu-Gi-Oh Card Price Checker & Pack Ripper - Cross-Platform PWA Edition",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8080 --directory .",
    "dev": "python3 -m http.server 7777 --directory . --bind 127.0.0.1",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage --reporter=verbose --bail=5",
    "test:coverage:all": "npm run test:coverage:unit && npm run test:imagemanager:coverage && npm run coverage:merge",
    "test:coverage:complete": "echo 'ðŸš€ Running comprehensive coverage tests...' && npm run test:coverage:unit && npm run test:imagemanager:coverage && npm run coverage:merge && echo 'âœ… Combined coverage report ready at coverage/combined-report.html'",
    "test:coverage-open": "npm run test:coverage:complete && open coverage/combined-report.html",
    "test:coverage-watch": "vitest --coverage --watch",
    "test:coverage-report": "vitest run --coverage --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "playwright test --reporter=html --output-dir=test-results/playwright-coverage",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage:unit": "vitest run --coverage --coverage.reportsDirectory=coverage-unit --reporter=verbose --environment=jsdom",
    "test:coverage:browser": "vitest run --coverage --browser.enabled --browser.headless",
    "test:imagemanager:coverage": "vitest run --config=vitest.browser.config.js --coverage",
    "test:e2e:fast": "playwright test --project=chromium --workers=1 --timeout=30000",
    "coverage:merge": "node scripts/merge-coverage.js",
    "coverage:summary": "npx c8 report --reporter=text-summary",
    "coverage:detailed": "npx c8 report --reporter=text",
    "coverage:open": "open coverage/combined-report.html",
    "test-voice": "node src/tests/voice.test.js",
    "build": "node scripts/build.js",
    "install-electron": "npm install electron@32.3.3 --save-dev",
    "start-electron": "electron main.js",
    "package-electron": "electron-builder"
  },
  "keywords": [
    "yugioh",
    "cards",
    "price",
    "checker",
    "pack",
    "ripper",
    "voice",
    "recognition",
    "pwa"
  ],
  "author": "YGORipperUI Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.1.2",
    "electron": "^32.3.3",
    "electron-builder": "^25.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "pwa": {
    "short_name": "YGO Ripper",
    "name": "YGO Ripper UI v2",
    "description": "Cross-platform Yu-Gi-Oh card price checker and pack ripper with voice recognition",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#ffd700",
    "background_color": "#1a1a2e"
  }
}
